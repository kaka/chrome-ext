{
    "manifest_version": 2,

    "name": "Fast AMF03 finder and more",
    "short_name": "FAMFFAM",
    "description": "Tillåter en att snabbt söka fram och öppna AMF03 och mer",
    "version": "0.6",

    "options_ui": {
	"page": "options.html",
	"chrome_style": true
    },

    "icons": {
	"16": "img/icon16.png",
	"38": "img/icon38.png",
	"48": "img/icon48.png",
	"128": "img/icon128.png"
    },

    "commands": {
	"_execute_browser_action": {
	    "suggested_key": {"default": "Alt+O"}
	},
	"navigate-up": {
	    "suggested_key": {"default": "Alt+P"},
	    "description": "Flytta markören uppåt"
	},
	"navigate-down": {
	    "suggested_key": {"default": "Alt+N"},
	    "description": "Flytta markören nedåt"
	}
    },

    "browser_action": {
	"default_popup": "popup.html",
	"default_title": "Fast AMF03 finder and more (Alt+O)"
    },
    "permissions": [
	"storage",
	"activeTab",
	"clipboardRead",
	"bookmarks",
	"history",
	"<all_urls>"
    ]
}
